<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_principal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/color_secundario"
            android:gravity="center_vertical"
            android:text="Victor Vergel"
            android:textColor="@color/color_principal_letra"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="19 aÃ±os"
                android:textColor="@color/color_principal_letra"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="666777888"
                android:textColor="@color/color_principal_letra"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Inserte su nombre"
        android:inputType="text" />

    <Button
        android:id="@+id/b_recogerNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_principal"
        android:enabled="false"
        android:text="Recoger nombre" />

    <Switch
        android:id="@+id/sw_apagado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apagar" />

</LinearLayout>