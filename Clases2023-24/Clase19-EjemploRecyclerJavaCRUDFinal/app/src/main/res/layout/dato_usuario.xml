<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.ejemplorecyclerjavacrudfinal.Usuario" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <GridLayout
            android:id="@+id/gl_datos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3">

            <ImageView
                android:layout_rowSpan="3"
                android:src="@drawable/ic_android_black_24dp"
                android:layout_gravity="fill"
                android:layout_columnWeight="0.4" />

            <TextView
                android:text="Nombre"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="0.3" />

            <TextView
                android:text="Edad"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="0.3" />

            <TextView
                android:text="Telefono"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="0.3" />

            <TextView
                android:id="@+id/tv_nombre"
                android:text="@{user.nombre}"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="0.3" />

            <TextView
                android:id="@+id/tv_edad"
                android:text="@{String.valueOf(user.edad)}"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="0.3" />

            <TextView
                android:id="@+id/tv_tel"
                android:text="@{user.telefono}"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="0.3" />
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>