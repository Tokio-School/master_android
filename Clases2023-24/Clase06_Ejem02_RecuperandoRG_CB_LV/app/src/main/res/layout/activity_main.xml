<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.clase06_ejem02_recuperandorg_cb_lv.MainActivity">

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Inserte nombre"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_ciudad" />

    <Spinner
        android:id="@+id/sp_ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/ciudades"
        android:minHeight="48dp" />


    <Switch
        android:id="@+id/sw_casado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Casado" />

    <RadioGroup
        android:id="@+id/rg_profesiones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_educacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profesor" />

        <RadioButton
            android:id="@+id/rb_cocinero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cocinero" />

        <RadioButton
            android:id="@+id/rb_musico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MÃºsico" />

        <RadioButton
            android:id="@+id/rb_deportista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deportista" />



    </RadioGroup>

    <CheckBox
        android:id="@+id/cb_baloncesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baloncesto" />

    <CheckBox
        android:id="@+id/cb_futbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Futbol" />

    <CheckBox
        android:id="@+id/cb_voleibol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voleibol" />

    <Button
        android:id="@+id/b_recuperarTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recuperar_datos" />

    <Spinner
        android:id="@+id/sp_datosUsuario2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />
</LinearLayout>